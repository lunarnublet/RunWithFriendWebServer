<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/navigation.css")
    <link href="https://fonts.googleapis.com/css?family=Oxygen:400|Playfair+Display" rel="stylesheet">
</head>
<body>
    <div class="content-top">
        @Html.Partial("Navigation")
        <div class="col-sm-6 col-sm-offset-3 main-header">
            @RenderSection("Header", false);
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <div class="container">
            @RenderSection("Body", false)
        </div>
    </div>
    <div class="container">
        <div class="row">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Run With Friends</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
